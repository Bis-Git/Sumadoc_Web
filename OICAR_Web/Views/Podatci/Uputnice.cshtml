@using SustavZaLijecnike
@model IEnumerable<Uputnica>

@{
    ViewData["Title"] = "Uputnice";
}

<div class="container-fluid p-0">
    <h1 class="h3 mb-3">Uputnice</h1>
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    @if(Model.ToList().Count != 0){
                        <table class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>@Html.DisplayNameFor(model => model.TipUputnice)</th>
                                <th>@Html.DisplayNameFor(model => model.Dijagnoza)</th>
                                <th>Ustanova</th>
                                <th>@Html.DisplayNameFor(model => model.Datum)</th>
                                <th>@Html.DisplayNameFor(model => model.Napomena)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                                <tr>
                                    <td><i class='fas fa-file-signature'></i></td>
                                    <td>@item.TipUputnice</td>
                                    <td>@item.Dijagnoza.MKBSifra</td>
                                    <td>@item.Ustanova.Naziv</td>
                                    <td>@item.Datum.ToShortDateString()</td>
                                    <td>@item.Napomena</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                    }else {
                        <h5>Nema podataka...</h5>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

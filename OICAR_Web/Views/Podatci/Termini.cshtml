@using SustavZaLijecnike
@model IEnumerable<Termin>
@{

}

<div class="container-fluid p-0">
    <h1 class="h3 mb-3">Termini</h1>
    <div class="row">
        <div class="col-xl-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>@Html.DisplayNameFor(model => model.Datum)</th>
                                <th>@Html.DisplayNameFor(model => model.Vrijeme)</th>
                                <th>@Html.DisplayNameFor(model => model.Napomena)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                
                                <tr>
                                    <td><i class="fas fa-clock"></i></td>
                                    <td>@item.Datum.ToShortDateString()</td>
                                    <td>@item.Vrijeme</td>
                                    <td>@item.Napomena</td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>